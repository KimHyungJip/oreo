<script>
  // 회원 정보 수정
  function usersinformation() {
    // const orderId = document.getElementById('order-id').innerText;
    const email = $('#inputuserEmail').val();
    const phone = $('#inputuserPhone').val();
    const address = $('#inputuserAddress').val();
    // const usergrade = $('#usergrade').val();

    if (!email) {
        alert('핸드폰 번호를 입력하세요.')
    } else if (!phone) {
        alert('이메일을 입력하세요.')
    } else if (!address) {
        alert('주소를 입력하세요.')
    } else {
      $.ajax({
        type: 'PUT',
        url: `/users`,
        data: {
          phone,
          email,
          address,
          // usergrade: usergrade,
        },

        success: function (response) {
          // alert('회원정보 수정 완료했습니다!');
          alert(response.data.message);
          location.href = '/admin_users';
        },
        error: function (error) {
          // alert('회원정보를 수정하는데 실패했습니다!');
          alert(error.response.data.errorMessage);
        },
      });
    }
  }
</script>
