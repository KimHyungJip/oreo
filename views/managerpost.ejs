      <div class="col-12">
        <button type="button" onclick="usersInformation()" class="btn btn-outline-info">변경 완료</button>
        <button type="button" onclick="history.back()" class="btn btn-outline-secondary">취소</button>
      </div>
    </form>
  </div>
  <div class="col"></div>
</div>

<script>
  $(document).ready(function () {
      me()
  });
  // 회원 정보 수정
  function usersInformation() {
    const user_id = document.getElementById('userId').value;
    const email = document.getElementById('inputuserEmail').value;
    const phone = document.getElementById('inputuserPhone').value;
    const address = document.getElementById('inputuserAddress').value;
    // const usergrade = $('#usergrade').val();

    if (!email) {
        alert('이메일을 입력하세요.')
    } else if (!phone) {
        alert('핸드폰 번호를 입력하세요.')
    } else if (!address) {
        alert('주소를 입력하세요.')
    } else {
      $.ajax({
        type: 'PUT',
        url: `/users/admin`,
        headers: {
          authorization: `Bearer ${localStorage.getItem('accessToken')}`,
        },
        data: {
          user_id,
          email,
          phone,
          address,
          // usergrade: usergrade,
        },
        success: function (response) {
          // alert('회원정보 수정 완료했습니다!');
          alert(response.message);
          // location.href = '/admin_users';
          history.back();
          location.reload();
        },
        error: function (error) {
          // alert('회원정보를 수정하는데 실패했습니다!');
          alert(error.responseJSON.message);
        },
      });
    }
  }
</script>
